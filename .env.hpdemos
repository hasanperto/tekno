# hpdemos.de - Production Environment Variables
# Bu dosyayı public_html/api/.env olarak yükleyin

NODE_ENV=production
PORT=5000

# Veritabanı Ayarları (cPanel'de oluşturduğunuz bilgileri yazın)
DB_HOST=localhost
DB_USER=veritabani_kullanici_adi
DB_PASSWORD=veritabani_sifresi
DB_NAME=veritabani_adi

# JWT Secret (Güçlü bir key oluşturun: openssl rand -base64 32)
JWT_SECRET=çok_güçlü_bir_secret_key_32_karakter_minimum_buraya_yazın

# Frontend URL
FRONTEND_URL=https://www.hpdemos.de

# Backend URL
BACKEND_URL=https://www.hpdemos.de/api

# Dosya Yükleme
UPLOAD_DIR=./public/uploads
MAX_FILE_SIZE=5242880

# E-posta Ayarları (Opsiyonel)
SMTP_HOST=smtp.hpdemos.de
SMTP_PORT=587
SMTP_USER=noreply@hpdemos.de
SMTP_PASS=email_sifreniz
SMTP_FROM=noreply@hpdemos.de

# Ödeme Gateway'leri (Opsiyonel)
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
IYZICO_API_KEY=
IYZICO_SECRET_KEY=
IYZICO_BASE_URL=https://api.iyzipay.com

# CORS Ayarları
CORS_ORIGIN=https://www.hpdemos.de

